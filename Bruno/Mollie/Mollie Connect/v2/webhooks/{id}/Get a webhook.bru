example {
  name: An enabled hook subscription object
  
  request: {
    url: {{baseUrl}}/v2/webhooks/:id?testmode=false
    method: GET
    mode: none
    params:query: {
      testmode: false
    }
  
    params:path: {
      id: hook_B2EyhTH5N4KWUnoYPcgiH
    }
  
    headers: {
      Accept: application/hal+json
      Authorization: <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/hal+json
    }
  
    status: {
      code: OK
      text: 200
    }
  
    body: {
      type: text
      content: '''
        {
          "resource": "webhook",
          "id": "hook_B2EyhTH5N4KWUnoYPcgiH",
          "url": "https://mollie.com",
          "profileId": "pfl_8XcSdLtrNK",
          "createdAt": "2024-12-06T10:09:56+00:00",
          "name": "Webhook #1",
