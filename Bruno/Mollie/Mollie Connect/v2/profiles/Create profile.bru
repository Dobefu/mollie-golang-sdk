example {
  name: The request contains issues. For example, if a profile name is missing or website URL is invalid.
  
  request: {
    url: {{baseUrl}}/v2/profiles
    method: POST
    mode: json
    headers: {
      Content-Type: application/json
      Accept: application/hal+json
      Authorization: <token>
    }
  
    body:json: {
      {
        "name": "My website name",
        "website": "https://example.com",
        "email": "test@mollie.com",
        "phone": "+31208202070",
        "description": "My website description",
        "countriesOfActivity": [
          "NL",
          "GB"
        ],
        "businessCategory": "OTHER_MERCHANDISE",
        "status": "unverified"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/hal+json
    }
  
    status: {
      code: Unprocessable Entity (WebDAV) (RFC 4918)
      text: 422
    }
  
    body: {
      type: text
      content: '''
        {
          "status": 422,
          "title": "Unprocessable Entity",
          "detail": "The 'website' field is missing",
          "field": "website",
          "_links": {
            "documentation": {
